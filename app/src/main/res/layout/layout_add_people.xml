<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="1dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/addPeopleProfilePic"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:layout_margin="1dp"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <TextView
            android:id="@+id/addPeopleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|fill_horizontal"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/times_new_roman_bold"
            android:gravity="fill_horizontal"
            android:text="Name"
            android:textColor="#000000"
            android:textSize="30sp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:checked="false"
        android:forceDarkAllowed="false"
        android:textColorHighlight="#000000"
        app:buttonTint="@color/colorPrimaryDark" />

</FrameLayout>